::selection
	background color
	color black

.page
	animation fadeIn 1s .5s ease backwards



.page-header
	background black
	text-align center
	color white
	margin-top -70px
	padding-top 50px
	.page-header-image
		padding 10px 0
		img
			margin 0 auto
			radius 50%



.hola
	width 25%
	position relative
	overflow hidden
	background-color white
	color white
	float left
	color white
	animation slideFadeUp .5s ease backwards
	animation-stagger 10, .1s
	@media break5
		width 20%
	@media break3
		width 33.3%
	@media break2
		width 50%
	.hola-bg
		plane absolute
		animation fadeIn .5s .5s ease backwards
		transition .5s ease
		opacity .5

	&.hola-1
		background-color #FF2461
		color #801231
	&.hola-2
		background-color #4B2380
		color #00CCCC
	&.hola-3
		background-color #F1C202
		color #e74c3c
	&.hola-4
		background-color #FFFFCC
		color #290B3B
	&.hola-5
		background-color #06385C
		color #9b59b6
	&.hola-6
		background-color #1F184E
		color #42D083
	&.hola-7
		background-color #16A085
		color #70FFE3
	&.hola-8
		background-color #F55064
		color #262A3B
	&.hola-9
		background-color #FFFFFF
		color #00FF99
	&.hola-10
		background-color #910B46
		color #F3BB8E

	.chao
		position absolute
		white-space nowrap
		left 0
		opacity .5
		transition 5s cb
		&:nth-child(1)
			opacity .1
		&:nth-child(2)
			opacity .8
		&:nth-child(3)
			opacity .3
		&:nth-child(4)
			opacity .4
		&:nth-child(5)
			opacity .5
		&:nth-child(6)
			opacity .6
		&:nth-child(7)
			opacity .7
		&:nth-child(8)
			opacity .5
		&:nth-child(9)
			opacity .9
		&:nth-child(10)
			opacity 1
		&:nth-child(3n+1)
			transition 6s cb

	.hola-image
		plane absolute
		img
			width 100%
			height auto

	.hola-link
		plane absolute
		display block
		.hola-circle
			circle 100px
			centre 100px, 100px
			background black
			color white
			transition .5s ease
			opacity 0
			font-size 30px
			@media break3
				display none
		.hola-category
			position absolute
			top 10px
			left 0
			background black
			color white
			padding 5px 10px
			font-family fuente1
			display block
			border-bottom 2px solid color
			font-size 14px
			text-transform uppercase
			transform translateX(-100%)
			transition .5s ease
		.hola-title
			position absolute
			top 42px
			left 0
			background black
			color white
			font-size 26px
			font-family fuente1
			padding 10px 10px
			display block
			transform translateX(-100%)
			transition .5s ease
	
	.hola-proportion
		width 100%

	&.hola-big
		width 50%
		height 700px	
	&.hola-double
		width 50%

	&.hola-big
	&.hola-double
		.hola-title
			font-size 50px
			padding 20px


	&:hover
		.hola-bg
			opacity 1
		.chao
			transform translateX(100px)
			&:nth-child(odd)
				transform translateX(-100px)
		.hola-circle
			opacity 1
			animation scaleIn .2s ease
		.hola-category
		.hola-title
			transform translateX(0)	



article
	position relative
	.article-inner
		transition .2s ease
		position relative
		overflow hidden

	.article-body
		position relative

	.article-image
		img
			width 100%
			height auto
			display block

	.article-title
		font-size 22px
		line-height 22px
		letter-spacing -1px
		a
			padding 15px 15px 5px
			display block
			color color

	.article-description 
		padding 0 15px 15px
		line-height 20px
		font-size 17px
		color #666

	.article-category
		text-align center
		position absolute
		top 0
		left 0
		width 100%
		a
			display inline-block
			background #666
			color white
			padding 0px 10px
			text-transform uppercase
			font-size 16px
			line-height 26px
			vertical-align top
			background primary_color
			transform translateY(-50px)
			transition .5s ease
			&:hover
				background primary_color
	&:hover
		.article-category a
			transform translateY(0)


	&.article-entry
		.article-inner
			background white
			border-top 3px solid #999
		.article-title a
			color #666
		&:hover
			.article-inner
				border-top-color primary_color
			.article-title a
				color primary_color


.instruction
	position absolute
	bottom 0
	left 50%
	width 100%
	z-index 5
	width 240px
	margin-left -120px
	animation slideFadeDown .5s 2s ease backwards
	display none
	&.in
		display block
	&.out
		display block
		animation fadeOut .5s ease both
	.instruction-content
		padding 10px 15px
		background black
		color #CCC
		line-height 16px
		text-align center
		animation instruction 3s ease infinite
		transform-origin center top

	&.instruction-bottom
		bottom 0
		left 50%
		.instruction-triangle
			triangle 5px, top, black
		.instruction-content
			border-bottom 2px solid color

	&.instruction-top
		bottom 100%
		left 50%
		.instruction-triangle
			triangle 5px, bottom, black
		.instruction-content
			border-top 2px solid color

	&.instruction-2
		bottom 30px


	&.instruction-3
		animation-delay .5s
		margin-bottom 20px








