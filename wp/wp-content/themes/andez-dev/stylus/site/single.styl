

.gallery
	&.out
		animation fadeOut .5s ease both
	.col
		animation fadeIn .5s ease
		animation-stagger 10, .1s
	img
		width 100%

.single-download
	text-align center
	margin-bottom 20px


.page
	&.page-tutoriales
		position relative
		color white
		background black
		text-align center
		overflow hidden
		.page-cover
			position absolute
			top -5%
			left -10%
			height 110%
			width 120%
			background center center no-repeat
			background-size cover
			-webkit-filter blur(20px)
			transform scale(1.2)

