*
	margin 0
	padding 0
	border 0
	outline 0


body
	-webkit-font-smoothing antialiased
	background white


body, button, input, textarea, select
	font-family fuente1
	color #333
	font-size 19px
	line-height 20px

a, button, input, textarea, select
	transition .2s ease

a
	color secondary_color
	text-decoration none

a, input, button, select
	transition tnormal

button, select, input[type='submit']
	&:hover
		cursor pointer

h1, h2, h3, h4
	font-family fuente2
	font-weight normal

h1
.h1
	title h1

h2
.h2
	title h2

h3
.h3
	title h3

h4
.h4
	title h4

h5		
.h5
	title h5

ul
ol
	list-style-type none

img
	display block
	&.img-ma
		margin 0 auto
	&.img-mw
		max-width 100%
	&.img-circle
		radius 50%

.inner
	padding 30px
@media break1
	.inner
		padding 15px


.limit
	max-width limit
	margin 0 auto
	position relative


.clear
	clear both
.center
	text-align center
.left
	text-align left
.right
	text-align right
.float-right
	float right
.float-left
	float left

.overflow
	overflow hidden
.none
	display none




.nomobile
	display block
.mobile
	display none
@media break1
	.nomobile
		display none
	.mobile
		display block






.content
	font-size 19px
	line-height 26px

	h1
		margin-bottom 30px
		@media break2
			margin-bottom 20px

	h2, h3, h4
		margin-bottom 10px
		padding-top 10px

	p, ol, ul, table
		margin-bottom 15px

	img,
	iframe
		max-width 100%
		display block
	img
		height auto

	iframe
		width 100%
		@media break1
			height 200px

	ul
		list-style-type disc
	ol
		list-style-type decimal
	ol,ul
		margin-left 30px
		li
			margin-bottom 5px

	blockquote
		padding 15px 15px 1px 35px
		background url(../img/icon-cite.png) 15px 15px no-repeat white
		border-left 2px solid secondary_color
		font-size 1.2em
		line-height 1.25em
		font-style italic
		margin-bottom 15px

	.important
		background #FFC
		padding 15px 15px 1px
		margin-bottom 15px
		
	a
		text-decoration none
		color color_secondary
		&:hover
			text-decoration underline

	// WP

	img
		&.alignright
			float right
			margin-left 20px
		&.alignleft
			float left
			margin-right 20px
		&.aligncenter
			margin 0 auto





.button, .button.button
	font-family fuente1
	font-size 16px
	line-height 18px
	radius rad2
	padding 8px 15px 6px
	text-decoration none
	display inline-block
	text-transform uppercase
	font-weight bold
	border 0
	width auto
	margin-bottom 2px
	background #DDD
	color #666
	transition tnormal
	text-align center
	&:hover
		cursor pointer
		color #FFF
		background primary_color
		text-decoration none
	&.button-primary
		color darken(color,50%)
		background color
		&:hover
			background lighten(color,50%)
			color darken(color,40%)
	&.button-light
		background white
		color #666
		&:hover
			background color
			color darken(color,50%)

	&.button-small
		font-size 12px
		line-height 11px
		padding 6px 8px
	&.button-medium
		font-size 18px
		line-height 18px
		padding 12px 22px 10px
	&.button-big
		font-size 20px
		line-height 20px
		padding 12px 25px
		radius rad
	&.button-line
		border 1px solid #DDD
		background transparent
		color white
		radius 0
		&:hover
			background primary_color
			border-color primary_color
			color darken(color,50%)
	&.button-disabled
		background #999
		border-color #999
		&:hover
			background #999
			border-color #999
			cursor default


	&.button-personalized
		border 1px solid rgba(0,0,0,.2)
		background transparent
		&:hover
			border-color transparent
			background white
			color black




